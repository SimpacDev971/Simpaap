generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Tenant {
  id                    String                  @id @default(cuid())
  name                  String
  subdomain             String                  @unique
  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @updatedAt
  users                 User[]
  tenant_application    tenant_application[]
  tenant_print_color    tenant_print_color[]
  tenant_print_side     tenant_print_side[]
  tenant_enveloppe      tenant_enveloppe[]
  tenant_speed          tenant_speed[]
  print_items           print_item[]
}

model User {
  id          String       @id @default(cuid())
  email       String       @unique
  password    String
  name        String?
  role        Role         @default(MEMBER)
  tenantId    String       @db.VarChar(50)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  theme       String?      @default("default")
  accounts    Account[]
  sessions    Session[]
  tenant      Tenant       @relation(fields: [tenantId], references: [id])
  print_items print_item[]
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Application {
  id                 Int                  @id(map: "application_pkey") @default(autoincrement())
  categorieid        Int
  nom                String               @db.VarChar(255)
  description        String?
  url                String?              @db.VarChar(500)
  categorie          categorie            @relation(fields: [categorieid], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_categorie")
  tenant_application tenant_application[]
}

model categorie {
  id          Int           @id @default(autoincrement())
  nom         String        @db.VarChar(255)
  description String?
  Application Application[]
}

model tenant_application {
  tenantid      String
  applicationid Int
  Application   Application @relation(fields: [applicationid], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_application")
  Tenant        Tenant      @relation(fields: [tenantid], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_tenant")

  @@id([tenantid, applicationid])
}

enum Role {
  SUPERADMIN
  ADMIN
  MEMBER
}

// ==========================================
// Print Options Models (Global)
// ==========================================

model print_color {
  id                 Int                  @id @default(autoincrement())
  value              String               @unique @db.VarChar(50)
  label              String               @db.VarChar(255)
  isActive           Boolean              @default(true)
  sortOrder          Int                  @default(0)
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  tenant_print_color tenant_print_color[]
}

model print_side {
  id                Int                 @id @default(autoincrement())
  value             String              @unique @db.VarChar(50)
  label             String              @db.VarChar(255)
  isActive          Boolean             @default(true)
  sortOrder         Int                 @default(0)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  tenant_print_side tenant_print_side[]
}

// ==========================================
// Enveloppe & Affranchissement Models (Global)
// ==========================================

model enveloppe {
  id        Int      @id @default(autoincrement())
  fullName  String   @db.VarChar(255)
  taille    String   @unique @db.VarChar(50)
  pdsMax    Int
  poids     Int      @default(5) // Poids de l'enveloppe en grammes
  addrX     Float    @db.DoublePrecision
  addrY     Float    @db.DoublePrecision
  addrH     Float    @db.DoublePrecision
  addrL     Float    @db.DoublePrecision
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant_enveloppe   tenant_enveloppe[]
}

model affranchissement_speed {
  id        Int      @id @default(autoincrement())
  value     String   @unique @db.VarChar(50)
  label     String   @db.VarChar(255)
  isActive  Boolean  @default(true)
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  affranchissements affranchissement[]
  tenant_speed      tenant_speed[]
}

model affranchissement {
  id        Int      @id @default(autoincrement())
  fullName  String   @db.VarChar(255)
  name      String   @db.VarChar(50)
  speedId   Int?
  pdsMin    Int
  pdsMax    Int
  price     Decimal  @db.Decimal(10, 4)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  speed affranchissement_speed? @relation(fields: [speedId], references: [id])

  @@index([pdsMin, pdsMax])
  @@index([speedId])
}

// ==========================================
// Tenant-PrintOption Join Tables
// ==========================================

model tenant_print_color {
  tenantId     String
  printColorId Int
  tenant       Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  print_color  print_color @relation(fields: [printColorId], references: [id], onDelete: Cascade)

  @@id([tenantId, printColorId])
}

model tenant_print_side {
  tenantId    String
  printSideId Int
  tenant      Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  print_side  print_side @relation(fields: [printSideId], references: [id], onDelete: Cascade)

  @@id([tenantId, printSideId])
}

model tenant_enveloppe {
  tenantId    String
  enveloppeId Int
  tenant      Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  enveloppe   enveloppe @relation(fields: [enveloppeId], references: [id], onDelete: Cascade)

  @@id([tenantId, enveloppeId])
}

model tenant_speed {
  tenantId String
  speedId  Int
  tenant   Tenant                 @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  speed    affranchissement_speed @relation(fields: [speedId], references: [id], onDelete: Cascade)

  @@id([tenantId, speedId])
}

// ==========================================
// Print Item - Submission History/Audit Log
// ==========================================

model print_item {
  id             String    @id @default(cuid())
  numTraitement  BigInt    @unique
  tenantId       String    @db.VarChar(50)
  userId         String    @db.VarChar(50)
  createdAt      DateTime  @default(now())
  sendAt         DateTime?
  status         String    @default("pending")
  totalPages     Int       @default(0)
  totalRecipients Int      @default(0)
  totalCost      Decimal?  @db.Decimal(10, 4)
  rawData        Json
  tenant         Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tenantId, createdAt])
  @@index([userId])
  @@index([numTraitement])
}
