generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Tenant {
  id                 String               @id @default(cuid())
  name               String
  subdomain          String               @unique
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  users              User[]
  tenant_application tenant_application[]
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String?
  role      Role      @default(MEMBER)
  tenantId  String    @db.VarChar(50)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  theme     String?   @default("default")
  accounts  Account[]
  sessions  Session[]
  tenant    Tenant    @relation(fields: [tenantId], references: [id])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Application {
  id                 Int                  @id(map: "application_pkey") @default(autoincrement())
  categorieid        Int
  nom                String               @db.VarChar(255)
  description        String?
  url                String?              @db.VarChar(500)
  categorie          categorie            @relation(fields: [categorieid], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_categorie")
  tenant_application tenant_application[]
}

model categorie {
  id          Int           @id @default(autoincrement())
  nom         String        @db.VarChar(255)
  description String?
  Application Application[]
}

model tenant_application {
  tenantid      String
  applicationid Int
  Application   Application @relation(fields: [applicationid], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_application")
  Tenant        Tenant      @relation(fields: [tenantid], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_tenant")

  @@id([tenantid, applicationid])
}

enum Role {
  SUPERADMIN
  ADMIN
  MEMBER
}
