generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Tenant {
  id                    String                  @id @default(cuid())
  name                  String
  subdomain             String                  @unique
  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @updatedAt
  users                 User[]
  tenant_application    tenant_application[]
  tenant_print_color    tenant_print_color[]
  tenant_print_side     tenant_print_side[]
  tenant_envelope_type  tenant_envelope_type[]
  tenant_postage_type   tenant_postage_type[]
  tenant_postage_speed  tenant_postage_speed[]
  print_items           print_item[]
}

model User {
  id          String       @id @default(cuid())
  email       String       @unique
  password    String
  name        String?
  role        Role         @default(MEMBER)
  tenantId    String       @db.VarChar(50)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  theme       String?      @default("default")
  accounts    Account[]
  sessions    Session[]
  tenant      Tenant       @relation(fields: [tenantId], references: [id])
  print_items print_item[]
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Application {
  id                 Int                  @id(map: "application_pkey") @default(autoincrement())
  categorieid        Int
  nom                String               @db.VarChar(255)
  description        String?
  url                String?              @db.VarChar(500)
  categorie          categorie            @relation(fields: [categorieid], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_categorie")
  tenant_application tenant_application[]
}

model categorie {
  id          Int           @id @default(autoincrement())
  nom         String        @db.VarChar(255)
  description String?
  Application Application[]
}

model tenant_application {
  tenantid      String
  applicationid Int
  Application   Application @relation(fields: [applicationid], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_application")
  Tenant        Tenant      @relation(fields: [tenantid], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_tenant")

  @@id([tenantid, applicationid])
}

enum Role {
  SUPERADMIN
  ADMIN
  MEMBER
}

// ==========================================
// Print Options Models (Global)
// ==========================================

model print_color {
  id                 Int                  @id @default(autoincrement())
  value              String               @unique @db.VarChar(50)
  label              String               @db.VarChar(255)
  isActive           Boolean              @default(true)
  sortOrder          Int                  @default(0)
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  tenant_print_color tenant_print_color[]
}

model print_side {
  id                Int                 @id @default(autoincrement())
  value             String              @unique @db.VarChar(50)
  label             String              @db.VarChar(255)
  isActive          Boolean             @default(true)
  sortOrder         Int                 @default(0)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  tenant_print_side tenant_print_side[]
}

model envelope_type {
  id                   Int                    @id @default(autoincrement())
  value                String                 @unique @db.VarChar(50)
  label                String                 @db.VarChar(255)
  description          String?
  isActive             Boolean                @default(true)
  sortOrder            Int                    @default(0)
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  tenant_envelope_type tenant_envelope_type[]
}

model postage_type {
  id                  Int                   @id @default(autoincrement())
  value               String                @unique @db.VarChar(50)
  label               String                @db.VarChar(255)
  isActive            Boolean               @default(true)
  sortOrder           Int                   @default(0)
  createdAt           DateTime              @default(now())
  updatedAt           DateTime              @updatedAt
  tenant_postage_type tenant_postage_type[]
}

model postage_speed {
  id                   Int                    @id @default(autoincrement())
  value                String                 @unique @db.VarChar(50)
  label                String                 @db.VarChar(255)
  isActive             Boolean                @default(true)
  sortOrder            Int                    @default(0)
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  tenant_postage_speed tenant_postage_speed[]
}

// ==========================================
// Tenant-PrintOption Join Tables
// ==========================================

model tenant_print_color {
  tenantId     String
  printColorId Int
  tenant       Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  print_color  print_color @relation(fields: [printColorId], references: [id], onDelete: Cascade)

  @@id([tenantId, printColorId])
}

model tenant_print_side {
  tenantId    String
  printSideId Int
  tenant      Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  print_side  print_side @relation(fields: [printSideId], references: [id], onDelete: Cascade)

  @@id([tenantId, printSideId])
}

model tenant_envelope_type {
  tenantId       String
  envelopeTypeId Int
  tenant         Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  envelope_type  envelope_type @relation(fields: [envelopeTypeId], references: [id], onDelete: Cascade)

  @@id([tenantId, envelopeTypeId])
}

model tenant_postage_type {
  tenantId      String
  postageTypeId Int
  tenant        Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  postage_type  postage_type @relation(fields: [postageTypeId], references: [id], onDelete: Cascade)

  @@id([tenantId, postageTypeId])
}

model tenant_postage_speed {
  tenantId       String
  postageSpeedId Int
  tenant         Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  postage_speed  postage_speed @relation(fields: [postageSpeedId], references: [id], onDelete: Cascade)

  @@id([tenantId, postageSpeedId])
}

// ==========================================
// Print Item - Submission History/Audit Log
// ==========================================

model print_item {
  id        String    @id @default(cuid())
  tenantId  String    @db.VarChar(50)
  userId    String    @db.VarChar(50)
  createdAt DateTime  @default(now())
  sendAt    DateTime?
  status    String    @default("pending")
  rawData   Json
  tenant    Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tenantId, createdAt])
  @@index([userId])
}
